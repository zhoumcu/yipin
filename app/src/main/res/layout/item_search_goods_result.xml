<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pinpai_rectangle_white"
    android:padding="1px"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head_person"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/common_dp12"
        android:layout_marginBottom="@dimen/common_dp12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_bfmg_pp"
        fresco:fadeDuration="1000"
        />


    <TextView
        android:id="@+id/tv_goods_name_search_result"
        style="@style/tv_product_list_name"
        android:text="奥迪"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_padding5"
        android:paddingRight="@dimen/common_padding5"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_goods_old_price_search_result"
            style="@style/tv_gray2_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="111"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/tv_carriage_search_result"
            style="@style/tv_gray2_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包邮"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_marginBottom="@dimen/common_dp12">

        <TextView
            android:id="@+id/tv_goods_new_price_search_result"
            style="@style/tv_f9adca_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"/>

        <TextView
            android:id="@+id/tx_fenqinum"
            style="@style/tv_c7c7c7_9"
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_immediately_pay_search_result"
            style="@style/tv_white_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_radius_purplish_blue_3_pressed"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/common_padding2"
            android:paddingLeft="@dimen/common_padding10"
            android:paddingRight="@dimen/common_padding10"
            android:paddingTop="@dimen/common_padding2"
            android:text="立即购买"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>