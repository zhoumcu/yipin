<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/ll_backgroud_gray3"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_padding50"
        android:background="@color/common_white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_brand_category_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@drawable/tv_black_purplish_blue_pressed"
                android:gravity="center"
                android:text="选择品牌"
                android:drawableRight="@drawable/ic_spanner"
                style="@style/tv_black_15"/>

        </LinearLayout>


    </RelativeLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/prrcv_search_goods_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />

    <include layout="@layout/empty"></include>

    <include layout="@layout/pb"></include>
</LinearLayout>