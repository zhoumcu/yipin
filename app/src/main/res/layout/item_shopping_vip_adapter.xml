<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">
    <!--更多-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="1000"
        fresco:placeholderImage="@drawable/icon_bfmg_pp" />


    <!--三个商品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--商品一 -->
        <LinearLayout
            android:id="@+id/ll_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <!--分期数加分期价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_dp12"
                android:paddingTop="@dimen/common_dp12"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_block"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="1"
                    android:layout_marginRight="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/tv_goods_new_price_search_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff76a4"
                        android:textSize="@dimen/common_dp13"
                        android:text="111" />

                    <TextView
                        android:id="@+id/tx_fenqinum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tv_c7c7c7_9"
                        android:textSize="@dimen/common_dp8"
                        android:text="X" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_immediately_pay_search_result"
                    style="@style/tv_white_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_radius_purplish_blue_3_pressed"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_padding2"
                    android:paddingLeft="@dimen/common_padding10"
                    android:paddingRight="@dimen/common_padding10"
                    android:paddingTop="@dimen/common_padding2"
                    android:text="立即购买"
                    android:visibility="gone" />
            </LinearLayout>
            <!--商品图片-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_dp10"
                android:paddingBottom="@dimen/common_dp10"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="1000"
                fresco:placeholderImage="@drawable/icon_bfmg_pp" />
            <!--商品名称-->
            <TextView
                android:id="@+id/tv_goods_name_search_result"
                style="@style/tv_3b3e40_13"
                android:paddingLeft="@dimen/common_dp4"
                android:paddingRight="@dimen/common_dp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dp12"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding5"
                android:paddingRight="@dimen/common_padding5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_goods_old_price_search_result"
                    style="@style/tv_gray2_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="111" />


                <TextView
                    android:id="@+id/tv_carriage_search_result"
                    style="@style/tv_gray2_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包邮" />
            </LinearLayout>
        </LinearLayout>
        <!--商品二-->
        <LinearLayout
            android:id="@+id/ll_product1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_dp12"
                android:paddingTop="@dimen/common_dp12"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_block"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="2"
                    android:layout_marginRight="3dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_goods_new_price_search_result1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff76a4"
                        android:textSize="@dimen/common_dp13"
                        android:text="111" />

                    <TextView
                        android:id="@+id/tx_fenqinum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tv_c7c7c7_9"
                        android:textSize="@dimen/common_dp8"
                        android:text="X" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_immediately_pay_search_result1"
                    style="@style/tv_white_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_radius_purplish_blue_3_pressed"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_padding2"
                    android:paddingLeft="@dimen/common_padding10"
                    android:paddingRight="@dimen/common_padding10"
                    android:paddingTop="@dimen/common_padding2"
                    android:text="立即购买"
                    android:visibility="gone" />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head_person1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_dp10"
                android:paddingBottom="@dimen/common_dp10"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="1000"
                fresco:placeholderImage="@drawable/icon_bfmg_pp" />


            <TextView
                android:id="@+id/tv_goods_name_search_result1"
                style="@style/tv_3b3e40_13"
                android:paddingLeft="@dimen/common_dp4"
                android:paddingRight="@dimen/common_dp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dp12"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding5"
                android:paddingRight="@dimen/common_padding5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_goods_old_price_search_result1"
                    style="@style/tv_gray2_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="111"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/tv_carriage_search_result1"
                    style="@style/tv_gray2_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包邮" />
            </LinearLayout>
        </LinearLayout>
        <!--商品三-->
        <LinearLayout
            android:id="@+id/ll_product2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_dp12"
                android:paddingTop="@dimen/common_dp12"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_block"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="3"
                    android:layout_marginRight="3dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tv_goods_new_price_search_result2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff76a4"
                        android:textSize="@dimen/common_dp13"
                        android:text="111" />

                    <TextView
                        android:id="@+id/tx_fenqinum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tv_c7c7c7_9"
                        android:textSize="@dimen/common_dp8"
                        android:text="X" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_immediately_pay_search_result2"
                    style="@style/tv_white_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_radius_purplish_blue_3_pressed"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_padding2"
                    android:paddingLeft="@dimen/common_padding10"
                    android:paddingRight="@dimen/common_padding10"
                    android:paddingTop="@dimen/common_padding2"
                    android:text="立即购买"
                    android:visibility="gone" />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head_person2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_dp10"
                android:paddingBottom="@dimen/common_dp10"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="1000"
                fresco:placeholderImage="@drawable/icon_bfmg_pp" />


            <TextView
                android:id="@+id/tv_goods_name_search_result2"
                style="@style/tv_3b3e40_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dp12"
                android:paddingLeft="@dimen/common_dp4"
                android:paddingRight="@dimen/common_dp4"
                android:gravity="center"
                android:singleLine="true"
                android:text="奥迪"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding5"
                android:paddingRight="@dimen/common_padding5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_goods_old_price_search_result2"
                    style="@style/tv_gray2_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="111"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/tv_carriage_search_result2"
                    style="@style/tv_gray2_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包邮" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>