<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_back_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_padding5"
        android:padding="5dp"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="30dp"
        android:background="@drawable/rectangle_radius_white_3"
        android:layout_marginLeft="@dimen/common_padding10"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_search"
            android:layout_margin="@dimen/common_padding5"/>

        <EditText
            android:id="@+id/et_search_goods_name"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/common_padding20"
            android:layout_height="30dp"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@null"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:hint="请输入搜索商品名称"
            android:singleLine="true"
            style="@style/edittext_black_gray2_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_padding5"
        android:text="取消"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingTop="@dimen/common_padding5"
        android:paddingBottom="@dimen/common_padding5"
        android:paddingRight="@dimen/common_padding10"
        android:paddingLeft="@dimen/common_padding10"
        android:background="@null"
        android:textColor="@color/tar_title_color"
        />
</LinearLayout>